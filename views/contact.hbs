<h1 class="text-center">Contact Us</h1>

<form class="col-md-6 col-md-offset-3" method="post">
    {{#each errorMessage}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}
 <div class="form-group">
    <label>Name</label>
    <input class="form-control"  aria-describedby="emailHelp" placeholder="Your Name" name="name" value={{name}}>
  </div>

  <div class="form-group">
    <label >Email address</label>
    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Your Email" value={{email}}>
  </div>
  <div class="form-group">
    <label >Message</label>
    <textarea class="form-control" name="message" row="3" placeholder="Your Message" >{{message}}</textarea>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>